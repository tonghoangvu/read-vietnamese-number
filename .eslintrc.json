{
	"root": true,
	"env": {
		"browser": true,
		"es2020": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/strict",
		"plugin:@typescript-eslint/stylistic",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"eqeqeq": "warn",
		"no-console": "warn",
		"no-debugger": "error",
		"curly": "error"
	}
}
